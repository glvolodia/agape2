<main class="lines main-content-inner">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-8">
                <article id="post" >
                    <header class="entry-header">
                        <!-- 
                        <% if @post.has_thumb? %>
                            <div class="entry-thumbnail">
                                <%= raw @post.the_thumb %>
                            </div>
                        <% end %> -->
                        
                        <h1 class="entry-title"><%= @post.the_title %></h1>
                        <span class="b-news__date">
                            <time><%= @post.the_created_at %></time>
                        </span>
                    </header><!-- .entry-header -->
                    <div class="entry-content">
                        <%= raw @post.the_content %>
                    </div><!-- .entry-content -->
                    <footer class="entry-meta">
                        <!-- custom fields -->
                        <% if @post.render_fields.present? %>
                            <hr>
                            <h4><%= ct("extra_attributes", default: 'Extra Attributes') %></h4>
                            <%= raw @post.render_fields %>
                        <% end %>
                    </footer><!-- .entry-meta -->
                </article><!-- #post -->
                <%= render partial: 'partials/comments', locals: {post: @post} if @post.can_commented? %>
            </div>
            <div class="col-xs-12 col-md-4">   
                <%= render partial: 'partials/sidebar', locals: {post: @post} %>
            </div>    
        </div>
    </div>    
</main>    

